<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
    <div>
    <%= form.label :major, "Select Major", class: "form-label" %>
    <%= form.select :major, options_for_select(Student::VALID_MAJORS), { prompt: "Any Major" }, name: 'search[major]', class: "form-control" %>
    </div>

     <div class="col-auto">
    <%= form.label :date_type, "Graduation Date Search", class: "form-label" %>
    <%= form.select :date_type, options_for_select([['Before', 'before'], ['After', 'after']]), { prompt: "Select Option" }, class: "form-control" %>
  </div>

  <div class="col-auto">
    <%= form.label :expected_graduation_date, "Date", class: "form-label" %>
    <%= form.date_field :expected_graduation_date, value: params.dig(:search, :expected_graduation_date), class: "form-control" %>
  </div>

    <div>
    <%= form.submit "Search", class: "btn btn-primary" %>
    </div>

  <div class="form-group">
    <%= link_to "Show All Students", students_path(show_all: true), class: "btn btn-secondary" %>
  </div>
  
<% end %>

