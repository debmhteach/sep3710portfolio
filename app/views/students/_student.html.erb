<div id="<%= dom_id student %>">
  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>


  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

  <p>
    <strong>Expected graduation date:</strong>
    <%= student.expected_graduation_date %>
  </p>

  <p>

    <% if student.profile_picture.attached? %>
      <%= image_tag student.profile_picture.variant(resize_to_limit: [150, nil])%>
    <% else %>
      <%= image_tag 'default-profile-picture.jpg', size: "150x150" %>
    <% end %> 
  </p>

  <% if @student.portfolio %>
  <p><strong>Preferred Email:</strong> <%= @student.portfolio.preferred_email %></p>
  <p><strong>Active:</strong> <%= @student.portfolio.active ? 'Yes' : 'No' %></p>
  <p><strong>Summary:</strong> <%= @student.portfolio.summary %></p>
  <p><strong>Skills:</strong> <%= @student.portfolio.skills %></p>
    <h2>Projects:</h2>
    <% if @student.projects.any? %>
      <ul>
        <% @student.projects.each do |project| %>
          <li>
           <%= link_to project.title, student_project_path(@student, project) %><br>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No projects available for this student.</p>
    <% end %>


<%= link_to "Add project", new_student_project_path(@student) %>

<% else %>
  <p>No portfolio information available.</p>
<% end %>

</div>
